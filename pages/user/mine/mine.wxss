/* pages/user/mine.wxss */

.user-info{
    width:120rpx;
    height: 120rpx;
    border: 1rpx solid #f2f2f2;
    margin:0 auto 60rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 120rpx;
}
.mine-item{
    width:100%;
    height:80rpx;
    border-bottom:10rpx solid #e2e2e2;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom:20rpx;

}
.mine-item.name{
    flex:1;
}
.mine-item image{
    width:30rpx;
    height:30rpx;
}
