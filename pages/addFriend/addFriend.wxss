/* pages/addFriend/addFriend.wxss */
page{
    min-height:100%;
    background:rgba(242,242,242,1);
}
.addFriend{
    background: #fff;
}
.add-img{
    display: flex;
    justify-content: center;
    padding-top:48rpx;
    padding-bottom:24rpx;
}
.add-img .img{
    width:120rpx;
    height:120rpx;
    border-radius:50%;
    background:rgba(242,242,242,1);
}
.add-info{
    height:44rpx;
    margin-bottom:48rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(204,204,204,1);
    line-height:44rpx;
    text-align: center;
}
.content .input{
    display: flex;
    align-items: center;
    justify-content: flex-start;
    padding:28rpx 0 28rpx;
    box-sizing: border-box;
}
.input+.input{
    border-top:1rpx solid #F2F2F2;
}
.content .input .label{
    margin-left:34rpx;
    height:44rpx;
    font-size:32rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:rgba(102,102,102,1);
    line-height:44rpx;
}
.content .input .input-item{
    flex:1;
    height:44rpx;
}
.content .input .input-item input{
    padding-right:30rpx;
    text-align: right;
    font-size:32rpx;
    font-family:PingFangSC-Regular;
    font-weight:400;
    color:#000;
    line-height:44rpx;
    
}
.save{
    position: fixed;
    left:0;
    width:100%;
    bottom:0;
    box-sizing: border-box;
    background: #fff;
    padding:20rpx 24rpx;

  }
.save .btn{
    height:88rpx;
    background:rgba(255,82,38,1);
    border-radius:4px;
    font-size:32rpx;
    font-family:PingFangSC-Semibold;
    font-weight:600;
    color:rgba(255,255,255,1);
    line-height:88rpx;
    text-align: center;
  }

