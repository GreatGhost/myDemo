.login{

}
.login-item{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding:32rpx 36rpx;
    border-bottom: 1px solid #f1f1f1;
}
.login-item .name{
    width:96rpx;
    margin-right:30rpx;
    text-align: left;
    font-size:32rpx;
    color: #666;
}
.login-item .value{
    flex:1;
    text-align: left;
}

.login-tips view{
    font-size: 28rpx;
    color: red;
    line-height: 1;
    padding: 18rpx 28rpx;
}
.login button{
    margin:0 22rpx 46rpx;
    color:#fff;
}
.reset-login{
    text-align: right;
    font-size: 28rpx;
    color: #3b95e9;
    margin-right: 14rpx;
}